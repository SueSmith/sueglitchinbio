// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/ubuntu

{
  "name": "Ubuntu",
  "image": "mcr.microsoft.com/devcontainers/base:noble",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "portsAttributes": {
    "3000-3010": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "5173-5180": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "8080-8090": {
      "label": "Site",
      "onAutoForward": "openPreview"
    },
    "7676": {
      "label": "Compute",
      "onAutoForward": "openPreview"
    }
  },
  "updateContentCommand": "npm install",
  "postAttachCommand": {
    "start": "npm run start",
    "build": "npm run build"
  },
  "waitFor": "updateContentCommand",
  "customizations": {
    "vscode": {
      "extensions": [
        "jkearins.action-buttons-ext@0.1.1",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "files.exclude": {
          "package-lock.json": true,
          "node_modules/": true
        },
        "chat.sendElementsToChat.enabled": false,
        "editor.minimap.enabled": false,
        "actionButtons": {
          "commands": [
            {
              "name": "ðŸŒˆ Prettify",
              "singleInstance": true,
              "useVsCodeApi": true,
              "command": "editor.action.formatDocument",
              "tooltip": "Tidy up your code"
            },
            {
              "name": "ðŸ’» Terminal",
              "singleInstance": true,
              "useVsCodeApi": true,
              "command": "workbench.action.terminal.toggleTerminal",
              "tooltip": "Open a terminal"
            },
            {
              "name": "ðŸ”Ž Split",
              "singleInstance": true,
              "useVsCodeApi": true,
              "command": "workbench.action.moveEditorToNextGroup",
              "tooltip": "Move your active tab to the side"
            },
            {
              "name": "ðŸ”— Share",
              "singleInstance": true,
              "tooltip": "Grab a link to share your draft site"
            },
            {
              "name": "ðŸš€ Publish",
              "singleInstance": true,
              "command": "bash _migrate/publish.sh",
              "tooltip": "Publish your content to Fastly Compute"
            }
          ],
          "defaultColor": "none",
          "reloadButton": null
        }
      }
    }
  }
}